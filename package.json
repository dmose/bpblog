{
  "name": "simple-blog",
  "version": "1.0.0",
  "description": "Minimal static blog generator",
  "type": "module",
  "scripts": {
    "build": "tsc && node dist/build.js",
    "dev": "tsc --watch",
    "serve": "npx serve docs",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.38.0",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0"
  },
  "lint-staged": {
    "*.{ts,md,html,json}": "prettier --write",
    "*.ts": "oxlint --fix"
  }
}
